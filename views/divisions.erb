
<div class="well">
  <% if @divisions.any? %>
    <h3>Click on an existing project to edit.</h3>
    <ul>
      <% @divisions.each() do |single_division|%>
      <li><%= single_division.division_name() %></li>
        <ul>
          <li><a href="/create_divisions/<%= single_division.id() %>/edit"><%= single_division.project_name() %></a></li>
        </ul>
      <% end %>
    </ul>
    <h3><a href="/employees/new">Add Employees</a></h3>
  <% else %>
    <h3>You have no divisions entered yet.</h3>
  <% end %>

  <form class="horizontal-inline" action="/create_divisions" method="post">
    <div class="form-group">
      <label for="div_name">Enter name of division:</label>
      <select class="" name="div_name" id="div_name">
        <option value="Human Resources">Human Resources</option>
        <option value="Sales">Sales</option>
        <option value="IT">IT</option>
        <option value="Corporate">Corporate</option>
      </select>
    </div>
    <div class="form-group">
      <label for="proj_name">Project name:</label>
      <input type="text" id="proj_name" name="proj_name">
    </div>
    <button type="submit" name="button">Submit</button>
  </form>
</div>
<p>
  <a href="/">Back to Home</a>
</p>
