




<div class="well">
  <form action="/create_divisions/<%= @division.id() %>" method="post">
    <input name="_method" type="hidden" value="patch">
    <label for="div_name">Change name of division:</label>
    <select class="" name="div_name" id="div_name">
      <option value="Human Resources">Human Resources</option>
      <option value="Sales">Sales</option>
      <option value="IT">IT</option>
      <option value="Corporate">Corporate</option>
    </select>
    <input type="text" name="proj_name" id="proj_name">
    <label for="proj_name">Change the project name</label>
    <button type="submit">Update</button>
  </form>
</div>






<div class="well">
  <form action="/create_divisions/<%= @division.id() %>" method="post">
    <input name="_method" type="hidden" value="delete">
    <label for="div_name">Delete <%= @division.division_name() %>?</label>
    <button type="submit">Delete</button>
  </form>
</div>
